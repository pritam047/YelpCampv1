<%- include('../partials/header') %>
  <div class="container">
      <div class="row">
        
        <div style="width:40%;margin:0px auto">
            <h1 style="text-align: center;">Add new comment to <%= campground.name %></h1>
            <form action="/campgrounds/<%= campground._id %>/comments" method="post">
                <div class="form-group">
                    <input class="form-control" type="text" name="comment[text]" placeholder="Add Comments">
                </div>
               
                <div class="form-group" style="text-align: center;">
                    <button class="btn btn-lg btn-primary">SUBMIT</button>
                </div>
            </form>
            <a href="/campgrounds/<%= campground._id %>" style="text-align: center;position: relative;">Go Back</a>
        </div>
      </div>

  </div>




<%- include('../partials/footer') %>